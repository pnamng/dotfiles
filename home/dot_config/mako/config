# Mako configuration with vibrant color scheme

# Font
font=JetBrainsMono Nerd Font 11

# Dimensions
width=350
height=150
margin=10
padding=15

# Position
anchor=top-right

# Colors - matching vibrant waybar theme
background-color=#0f0f19e6
text-color=#e0e0e0
border-color=#00bfff
border-size=2
border-radius=8

# Progress bar
progress-color=over #00d9ff

# Icons
icon-path=/usr/share/icons/hicolor
max-icon-size=48

# Behavior
default-timeout=5000
ignore-timeout=0

# Grouping
group-by=app-name
max-visible=5

# Urgency: Low
[urgency=low]
background-color=#0f0f19e6
text-color=#e0e0e0
border-color=#05ffa1
default-timeout=3000

# Urgency: Normal
[urgency=normal]
background-color=#0f0f19e6
text-color=#e0e0e0
border-color=#00bfff
default-timeout=5000

# Urgency: Critical
[urgency=critical]
background-color=#1e1e2de6
text-color=#ffffff
border-color=#ff2a6d
border-size=3
default-timeout=0
ignore-timeout=1

# Application specific (examples)
[app-name="Spotify"]
border-color=#05ffa1

[app-name="Discord"]
border-color=#d946ef

[app-name="Volume"]
border-color=#d946ef

[app-name="Brightness"]
border-color=#ffd93d
