# Mako configuration with Gruvbox Dark Hard theme

# Font
font=GeistMono Nerd Font 11

# Dimensions
width=350
height=150
margin=10
padding=15

# Position
anchor=top-right

# Colors - Gruvbox Dark Hard theme
background-color=#1d2021e6
text-color=#ebdbb2
border-color=#83a598
border-size=2
border-radius=8

# Progress bar
progress-color=over #8ec07c

# Icons
icon-path=/usr/share/icons/hicolor
max-icon-size=48

# Behavior
default-timeout=5000
ignore-timeout=0

# Grouping
group-by=app-name
max-visible=5

# Urgency: Low
[urgency=low]
background-color=#1d2021e6
text-color=#ebdbb2
border-color=#b8bb26
default-timeout=3000

# Urgency: Normal
[urgency=normal]
background-color=#1d2021e6
text-color=#ebdbb2
border-color=#83a598
default-timeout=5000

# Urgency: Critical
[urgency=critical]
background-color=#1d2021e6
text-color=#ebdbb2
border-color=#fb4934
border-size=3
default-timeout=0
ignore-timeout=1

# Application specific (examples)
[app-name="Spotify"]
border-color=#b8bb26

[app-name="Discord"]
border-color=#d3869b

[app-name="Volume"]
border-color=#d3869b

[app-name="Brightness"]
